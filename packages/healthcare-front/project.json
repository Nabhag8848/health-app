{
  "name": "healthcare-front",
  "tags": ["type:app", "scope:front"],
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/healthcare-front/src",
  "projectType": "application",
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project tsconfig.app.json --noEmit",
        "cwd": "packages/healthcare-front"
      },
      "dependsOn": ["^typecheck"]
    },
    "shadcn:component:add": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx shadcn@latest add {args.component}",
        "cwd": "packages/healthcare-front"
      },
      "description": "Add a shadcn component to the UI library"
    }
  }
}
